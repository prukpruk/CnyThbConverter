<Window x:Class="CnyThbConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CNY ⇄ THB Converter" Height="260" Width="420"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Amount" FontWeight="Bold"/>
        <TextBox x:Name="InputAmount"
         Height="32"
         VerticalContentAlignment="Center"
         PreviewTextInput="DigitsOnly"
         PreviewKeyDown="Amount_PreviewKeyDown"
         DataObject.Pasting="Amount_OnPaste"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" >
            <ComboBox x:Name="FromCode" Width="120" Margin="0,0,12,0"/>
            <Button Content="⇄ Swap" Width="80" Click="Swap_Click"/>
            <ComboBox x:Name="ToCode" Width="120" Margin="12,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="ConvertBtn" Content="Convert" Width="100" Click="Convert_Click"/>
            <TextBlock Text=" Result:" Margin="16,0,0,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="ResultText" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Grid.Row="5" Margin="0,16,0,0" Foreground="Gray"/>
    </Grid>
</Window>
